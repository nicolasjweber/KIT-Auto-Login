{
  "manifest_version": 3,
  "name": "KIT Auto-Login",
  "version": "9.16.2",
  "description": "Automatically clicks through various KIT login pages (ILIAS, CAS Campus and other services).",
  "browser_specific_settings": {
    "gecko": {
      "id": "{37143706-86ed-480c-940c-7353399874cc}"
    }
  },
  "icons": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
  },
  "permissions": ["storage"],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "action": {
    "default_popup": "options/options.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://idp.scc.kit.edu/*"],
      "js": ["scripts/utils.js", "scripts/idp-login.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://ilias.studium.kit.edu/*"],
      "js": ["scripts/utils.js", "scripts/ilias.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://campus.studium.kit.edu/*"],
      "js": ["scripts/utils.js", "scripts/campus.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://lt2srv.iar.kit.edu/*", "https://lecture-translator.kit.edu/*"],
      "js": ["scripts/utils.js", "scripts/lecture-translator.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://bewerbung.studium.kit.edu/*"],
      "js": ["scripts/utils.js", "scripts/bewerbung.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://plus.campus.kit.edu/*"],
      "js": ["scripts/utils.js", "scripts/campus-plus.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://portal.wiwi.kit.edu/*"],
      "js": ["scripts/utils.js", "scripts/wiwi-portal.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://gitlab.kit.edu/*"],
      "js": ["scripts/utils.js", "scripts/gitlab.js"],
      "run_at": "document_idle"
    }
  ]
}