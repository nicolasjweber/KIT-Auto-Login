{
  "manifest_version": 2,
  "name": "KIT Auto-Login",
  "version": "9.11",
  "description": "Automatically clicks through the KIT login pages (for ILIAS, CAS Campus and other services).",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.ilias.studium.kit.edu/login*",
        "*://*.campus.studium.kit.edu/*",
        "*://*.ilias.studium.kit.edu/ilias.php*",
        "*://*.idp.scc.kit.edu/idp/profile*",
		"*://*.lt2srv.iar.kit.edu/*",
		"*://*.lecture-translator.kit.edu/*"
      ],
      "js": [
        "login.js"
      ]
    }
  ]
}